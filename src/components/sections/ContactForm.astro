---
import Section from "../ui/Section.astro";

interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  nameLabel?: string;
  phoneLabel?: string;
  buttonText?: string;
  whatsappButton?: {
    text: string;
    href: string;
  };
}

const {
  title = "Хотите оформить заказ? Получите бесплатную консультацию!",
  subtitle = "Не знаете, с какой стороны подступиться к выбору нового кухонного гарнитура на заказ? Просто оставьте заявку на расчёт!",
  description = "Наш специалист бесплатно поможет вам подобрать стиль, материалы и рассчитает стоимость изготовления кухонной мебели в Алматы. Мы берём на себя весь процесс, а для вас — никакой головной боли!",
  nameLabel = "Имя",
  phoneLabel = "Телефон",
  buttonText = "Рассчитать стоимость гарнитура мечты",
  whatsappButton,
} = Astro.props;
---

<Section id="form" class="py-16 md:py-20 bg-gradient-to-br from-stone-50 to-neutral-100">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-3xl font-bold text-stone-800 mb-4">
        {title}
      </h2>
      {subtitle && (
        <p class="text-base md:text-lg text-stone-600 mb-4">
          {subtitle}
        </p>
      )}
      {description && (
        <p class="text-base md:text-lg text-stone-600">
          {description}
        </p>
      )}
    </div>

    <!-- Form -->
    <div class="bg-white rounded-2xl shadow-lg border border-stone-200 overflow-hidden">
      <form class="p-6 md:p-8 space-y-6">
        <div class="space-y-2">
          <label for="name" class="block text-base font-semibold text-stone-800">
            {nameLabel}
          </label>
          <input 
            type="text" 
            id="name"
            name="name"
            placeholder={nameLabel}
            required
            class="w-full border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm bg-white" 
          />
        </div>

        <div class="space-y-2">
          <label for="phone" class="block text-base font-semibold text-stone-800">
            {phoneLabel}
          </label>
          <input 
            type="tel" 
            id="phone"
            name="phone"
            placeholder={phoneLabel}
            required
            class="w-full border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm bg-white" 
          />
        </div>

        <div class={`pt-2 ${whatsappButton ? 'space-y-3' : ''}`}>
          <button 
            type="submit" 
            class="w-full px-6 py-3.5 bg-stone-800 hover:bg-stone-700 text-white font-semibold rounded-lg transition-all duration-200 shadow-md hover:shadow-lg text-base"
          >
            {buttonText}
          </button>
          {whatsappButton && (
            <a
              href={whatsappButton.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-full px-6 py-3.5 bg-green-500 hover:bg-green-600 text-white font-semibold rounded-lg transition-all duration-200 shadow-md hover:shadow-lg text-base flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
              </svg>
              {whatsappButton.text}
            </a>
          )}
        </div>
      </form>
    </div>
  </div>
</Section>

<script>
  // Обработка формы
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('#contact-form form');
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        // Здесь можно добавить логику отправки формы
        console.log('Contact form submitted');
      });
    }
  });
</script>

