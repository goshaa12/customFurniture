---
import { Phone, MessageCircle, UserCheck, Hammer, CheckSquare } from '@lucide/astro';

const steps = [
  {
    icon: Phone,
    title: "Оставляете заявку",
    description: "Позвоните нам или заполните короткую форму — укажите адрес и удобное время."
  },
  {
    icon: MessageCircle,
    title: "Уточняем детали",
    description: "Менеджер перезвонит, чтобы согласовать нюансы и назначить специалиста под задачу."
  },
  {
    icon: UserCheck,
    title: "Приезжает мастер",
    description: "Сборщик прибывает к назначенному часу, со необходимым инструментом и опытом."
  },
  {
    icon: Hammer,
    title: "Подготавливает и собирает конструкцию",
    description: "Проверяет комплектность, подгоняет детали, фиксирует всё без перекосов и шума."
  },
  {
    icon: CheckSquare,
    title: "Проверяет результат и убирает за собой",
    description: "После завершения всё проверяется, мусор и упаковка вывозятся — комната в порядке."
  }
];
---

<section class="py-16 px-6 bg-white md:px-12 lg:px-24">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-8 text-gray-900">Хватит превращать выходные в стройплощадку — упростите себе жизнь!</h2>
  </div>

  <div class="grid gap-10 md:grid-cols-2 max-w-5xl mx-auto mb-12">
    {steps.map((step) => (
      <div class="bg-gray-50 p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 flex items-start gap-4">
        <step.icon class="w-10 h-10 text-amber-500 flex-shrink-0" />
        <div>
          <h3 class="text-xl font-semibold mb-2 text-gray-800">{step.title}</h3>
          <p class="text-gray-600">{step.description}</p>
        </div>
      </div>
    ))}
  </div>

  <div class="text-center">
    <a href="#contact" class="inline-block px-8 py-4 bg-amber-500 text-white font-semibold rounded-lg shadow hover:bg-amber-600 transition-colors duration-300">
      Оставить заявку
    </a>
  </div>
</section>