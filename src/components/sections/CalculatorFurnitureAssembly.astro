---
import Section from "../ui/Section.astro";
import { calculatorData, type CalculatorData } from "../../data/furniture-assembly";
import { Calculator, User, FileText, Phone } from '@lucide/astro';

interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  buttonText?: string;
  contactFields?: {
    name: string;
    taskDescription?: string;
    phone: string;
  };
}

const defaultData = calculatorData;

const {
  title = defaultData.title,
  subtitle = defaultData.subtitle,
  description = defaultData.description,
  buttonText = defaultData.buttonText,
  contactFields = defaultData.contactFields,
} = Astro.props;

---

<Section id="calculator" class="py-16 md:py-20 bg-gradient-to-br from-stone-50 to-neutral-100">
  <div class="max-w-4xl mx-auto px-4">
    {/* Header */}
    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-3xl font-bold text-stone-800 mb-2">
        {title}
      </h2>
      {subtitle && (
        <p class="text-base md:text-lg text-stone-600 mb-2">
          {subtitle}
        </p>
      )}
      {description && (
        <p class="text-sm md:text-base text-stone-500">
          {description}
        </p>
      )}
    </div>

    {/* Form */}
    <div class="bg-white rounded-2xl shadow-lg border border-stone-200 overflow-hidden">
      <form class="p-6 md:p-8 space-y-6">
        
        {/* 1. Имя */}
        <div class="space-y-2">
          <label class="flex items-center text-base font-semibold text-stone-800">
            <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center text-amber-600 mr-2 flex-shrink-0">
              <User size={16} />
            </div>
            <span>{contactFields.name}:</span>
          </label>
          <div class="ml-10">
            <input 
              type="text" 
              name="name"
              placeholder={contactFields.name}
              required
              class="w-full border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm bg-white" 
            />
          </div>
        </div>

        {/* 2. Описание задачи */}
        <div class="space-y-2">
          <label class="flex items-center text-base font-semibold text-stone-800">
            <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center text-amber-600 mr-2 flex-shrink-0">
              <FileText size={16} />
            </div>
            <span>{contactFields.taskDescription || "Кратко опишите задачу"}:</span>
          </label>
          <div class="ml-10">
            <textarea 
              name="taskDescription"
              rows="4"
              placeholder={contactFields.taskDescription || "Например: нужно собрать шкаф-купе, кровать и комод"}
              required
              class="w-full border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm bg-white resize-none" 
            ></textarea>
          </div>
        </div>

        {/* 3. Телефон */}
        <div class="space-y-2">
          <label class="flex items-center text-base font-semibold text-stone-800">
            <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center text-amber-600 mr-2 flex-shrink-0">
              <Phone size={16} />
            </div>
            <span>{contactFields.phone}:</span>
          </label>
          <div class="ml-10">
            <input 
              type="tel" 
              name="phone"
              placeholder={contactFields.phone}
              required
              class="w-full border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm bg-white" 
            />
          </div>
        </div>

        {/* Submit Button */}
        <div class="pt-2">
          <button 
            type="submit" 
            class="w-full px-6 py-3.5 bg-stone-800 hover:bg-stone-700 text-white font-semibold rounded-lg transition-all duration-200 shadow-md hover:shadow-lg text-base"
          >
            {buttonText}
          </button>
        </div>

      </form>
    </div>
  </div>
</Section>

<script>
  // Обработка формы
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('#calculator form');
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        // Здесь можно добавить логику отправки формы
        console.log('Form submitted');
      });
    }
  });
</script>

