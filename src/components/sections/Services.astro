---
import Section from "../ui/Section.astro";
import { servicesData } from "../../data/index";

interface Props {
  title?: string;
  subtitle?: string;
  items?: Array<{ name: string }>;
}

// Получаем данные из централизованного хранилища или из props
const defaultData = servicesData;

const {
  title = defaultData.title,
  subtitle = defaultData.subtitle,
  items: propItems,
} = Astro.props;

// Используем items из props, если они переданы (даже если пустой массив)
// Если items не переданы через props, используем defaultData.items
const items = propItems !== undefined ? propItems : (defaultData.items || []);
---

<Section id="furniture-categories" class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4 text-center mb-14">
    <h2 class="text-3xl md:text-4xl font-bold text-stone-800 mb-6">
      {title}
    </h2>
    {subtitle && (
      <p class="text-stone-600 text-lg md:text-xl max-w-3xl mx-auto">
        {subtitle}
      </p>
    )}
  </div>

  {items && items.length > 0 && (
    <div class="max-w-4xl mx-auto px-4 grid md:grid-cols-1 gap-4">
      {items.map((item) => (
        <div class="p-6 bg-neutral-100 hover:bg-amber-200 rounded-2xl border border-neutral-200 hover:border-stone-400 transition-all duration-300">
          <p class="text-stone-800 font-medium text-base md:text-lg leading-relaxed">
            {item?.name}
          </p>
        </div>
      ))}
    </div>
  )}
</Section>