---
import Section from "../ui/Section.astro";
import { customFurnitureData, type CustomFurnitureSection } from "../../data/index";

interface Props {
  title?: string;
  subtitle?: string;
  sections?: CustomFurnitureSection[];
}

// Получаем данные из централизованного хранилища или из props
const defaultData = customFurnitureData;

const {
  title = defaultData.title,
  subtitle = defaultData.subtitle,
  sections = defaultData.sections,
} = Astro.props;
---

<Section id="custom-furniture" class="py-24 bg-white">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-stone-800 mb-8">
      {title}
    </h2>
    {subtitle && (
      <p class="text-stone-600 text-lg md:text-xl mb-16 text-center max-w-3xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    )}

    <!-- Секции -->
    <div class="space-y-12">
      {sections.map((section) => (
        <div class="bg-neutral-50 rounded-2xl p-8 md:p-10 border border-neutral-200 hover:border-stone-400 transition-all duration-300">
          <h3 class="text-2xl md:text-3xl font-semibold text-stone-800 mb-6">
            {section.title}
          </h3>
          <ul class="space-y-4">
            {section.items.map((item) => (
              <li class="flex items-center text-stone-600 leading-relaxed">
                <span class="text-amber-500 mr-3 flex-shrink-0">•</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</Section>

