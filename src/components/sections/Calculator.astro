---
import Section from "../ui/Section.astro";
import { calculatorData, type CalculatorData } from "../../data/index";
import { Package, Ruler, Wrench, Layout, Plus, Clock, User } from '@lucide/astro';

interface Props {
  title?: string;
  subtitle?: string;
  furnitureTypes?: Array<{ value: string; label: string }>;
  materials?: Array<{ value: string; label: string }>;
  hardwareOptions?: Array<{ value: string; label: string }>;
  configurations?: Array<{ value: string; label: string }>;
  additionalOptions?: Array<{ value: string; label: string }>;
  deadlineOptions?: Array<{ value: string; label: string }>;
  buttonText?: string;
  additionalText?: string;
  contactFields?: {
    name: string;
    phone: string;
    email?: string;
    emailLabel?: string;
  };
  dimensionsLabels?: {
    length?: string;
    height?: string;
    depth?: string;
  };
}

const defaultData = calculatorData;

const {
  title = defaultData.title,
  subtitle = defaultData.subtitle,
  furnitureTypes = defaultData.furnitureTypes,
  materials = defaultData.materials,
  hardwareOptions = defaultData.hardwareOptions,
  configurations = defaultData.configurations,
  additionalOptions = defaultData.additionalOptions,
  deadlineOptions = defaultData.deadlineOptions,
  buttonText = defaultData.buttonText,
  additionalText = defaultData.additionalText,
  contactFields = defaultData.contactFields,
  dimensionsLabels = defaultData.dimensionsLabels,
} = Astro.props;
---

<Section id="calculator" class="py-16 md:py-20 bg-gradient-to-br from-stone-50 to-neutral-100">
  <div class="max-w-4xl mx-auto px-4">
    {/* Header */}
    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-3xl font-bold text-stone-800 mb-2">
        {title}
      </h2>
      {subtitle && (
        <p class="text-base md:text-lg text-stone-600">
          {subtitle}
        </p>
      )}
    </div>

    {/* Form */}
    <div class="bg-white rounded-2xl shadow-lg border border-stone-200 overflow-hidden">
      <form class="p-6 md:p-8 space-y-6">
        
        {/* 1. Вид мебели - скрываем, если только один вариант */}
        {furnitureTypes.length > 1 && (
          <div class="space-y-2">
            <label class="flex items-center text-base font-semibold text-stone-800">
              <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center text-amber-600 mr-2 flex-shrink-0">
                <Package size={16} />
              </div>
              <span>1. Вид мебели</span>
            </label>
            <div class="relative">
              <select 
                name="furnitureType"
                class="w-full appearance-none bg-white border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm cursor-pointer pr-10"
              >
                {furnitureTypes.map((option) => (
                  <option value={option.value}>{option.label}</option>
                ))}
              </select>
              <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none">
                <svg class="w-5 h-5 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </div>
            </div>
          </div>
        )}

        {/* 2. Габариты мебели */}
        <div class="space-y-2">
          <label class="flex items-center text-base font-semibold text-stone-800">
            <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center text-amber-600 mr-2 flex-shrink-0">
              <Ruler size={16} />
            </div>
            <span>{furnitureTypes.length > 1 ? "2. " : ""}Габариты мебели</span>
          </label>
          <div class="grid grid-cols-2 gap-3">
            <div class="relative">
              <input 
                type="number" 
                name="length"
                placeholder={dimensionsLabels?.length || "Длина (см)"} 
                class="w-full border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm bg-white" 
              />
            </div>
            <div class="relative">
              <input 
                type="number" 
                name="height"
                placeholder={dimensionsLabels?.height || "Высота (см)"} 
                class="w-full border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm bg-white" 
              />
            </div>
          </div>
          <label class="inline-flex items-center text-xs text-stone-600 cursor-pointer group ml-10">
            <div class="relative">
              <input 
                type="checkbox" 
                name="needMeasurement"
                class="sr-only peer" 
              />
              <div class="w-4 h-4 border-2 border-stone-300 rounded peer-checked:bg-amber-500 peer-checked:border-amber-500 transition-all flex items-center justify-center">
                <svg class="w-3 h-3 text-white opacity-0 peer-checked:opacity-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
            </div>
            <span class="ml-2 group-hover:text-stone-800 transition-colors">Не знаю точные размеры — нужен специалист для замера</span>
          </label>
        </div>

        {/* 3. Материал фасадов */}
        <div class="space-y-2">
          <label class="flex items-center text-base font-semibold text-stone-800">
            <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center text-amber-600 mr-2 flex-shrink-0">
              <Package size={16} />
            </div>
            <span>{furnitureTypes.length > 1 ? "3. " : "1. "}Материал фасадов</span>
          </label>
          <div class="relative">
            <select 
              name="material"
              class="w-full appearance-none bg-white border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm cursor-pointer pr-10"
            >
              {materials.map((option) => (
                <option value={option.value}>{option.label}</option>
              ))}
            </select>
            <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none">
              <svg class="w-5 h-5 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </div>
          </div>
        </div>

        {/* 4. Фурнитура */}
        <div class="space-y-2">
          <label class="flex items-center text-base font-semibold text-stone-800">
            <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center text-amber-600 mr-2 flex-shrink-0">
              <Wrench size={16} />
            </div>
            <span>{furnitureTypes.length > 1 ? "4. " : "2. "}Фурнитура</span>
          </label>
          <div class="space-y-2 ml-10">
            {hardwareOptions.map((option) => (
              <label class="flex items-center p-2.5 border-2 border-stone-200 rounded-lg cursor-pointer hover:border-amber-400 hover:bg-amber-50 transition-all group">
                <div class="relative">
                  <input 
                    type="radio" 
                    name="hardware" 
                    value={option.value}
                    class="sr-only peer" 
                  />
                  <div class="w-4 h-4 border-2 border-stone-300 rounded-full peer-checked:border-amber-500 transition-all flex items-center justify-center">
                    <div class="w-2 h-2 rounded-full bg-amber-500 opacity-0 peer-checked:opacity-100 transition-opacity"></div>
                  </div>
                </div>
                <span class="ml-3 text-sm text-stone-700 group-hover:text-stone-800">{option.label}</span>
              </label>
            ))}
          </div>
        </div>

        {/* 5. Конфигурация мебели */}
        <div class="space-y-2">
          <label class="flex items-center text-base font-semibold text-stone-800">
            <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center text-amber-600 mr-2 flex-shrink-0">
              <Layout size={16} />
            </div>
            <span>{furnitureTypes.length > 1 ? "5. " : "3. "}Формат кухни на заказ</span>
          </label>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-2 ml-10">
            {configurations.map((option) => (
              <label class="relative">
                <input 
                  type="radio" 
                  name="configuration" 
                  value={option.value}
                  class="sr-only peer" 
                />
                <div class="p-2.5 border-2 border-stone-200 rounded-lg text-center cursor-pointer transition-all hover:border-amber-400 peer-checked:border-amber-500 peer-checked:bg-amber-50 peer-checked:text-amber-700 text-xs font-medium text-stone-700">
                  {option.label}
                </div>
              </label>
            ))}
          </div>
        </div>

        {/* 6. Дополнительные параметры */}
        <div class="space-y-2">
          <label class="flex items-center text-base font-semibold text-stone-800">
            <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center text-amber-600 mr-2 flex-shrink-0">
              <Plus size={16} />
            </div>
            <span>{furnitureTypes.length > 1 ? "6. " : "4. "}Рабочая поверхность</span>
          </label>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-2 ml-10">
            {additionalOptions.map((option) => (
              <label class="inline-flex items-center p-2 border-2 border-stone-200 rounded-lg cursor-pointer hover:border-amber-400 hover:bg-amber-50 transition-all group">
                <div class="relative">
                  <input 
                    type="checkbox" 
                    name="additionalOptions" 
                    value={option.value}
                    class="sr-only peer" 
                  />
                  <div class="w-4 h-4 border-2 border-stone-300 rounded peer-checked:bg-amber-500 peer-checked:border-amber-500 transition-all flex items-center justify-center">
                    <svg class="w-3 h-3 text-white opacity-0 peer-checked:opacity-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                </div>
                <span class="ml-2 text-xs text-stone-700 group-hover:text-stone-800">{option.label}</span>
              </label>
            ))}
          </div>
        </div>

        {/* 7. Вариант сроков изготовления */}
        <div class="space-y-2">
          <label class="flex items-center text-base font-semibold text-stone-800">
            <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center text-amber-600 mr-2 flex-shrink-0">
              <Clock size={16} />
            </div>
            <span>{furnitureTypes.length > 1 ? "7. " : "5. "}Вариант сроков изготовления</span>
          </label>
          <div class="relative">
            <select 
              name="deadline"
              class="w-full appearance-none bg-white border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm cursor-pointer pr-10"
            >
              {deadlineOptions.map((option) => (
                <option value={option.value}>{option.label}</option>
              ))}
            </select>
            <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none">
              <svg class="w-5 h-5 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </div>
          </div>
        </div>

        {/* 8. Контактные данные */}
        <div class="space-y-2">
          <label class="flex items-center text-base font-semibold text-stone-800">
            <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center text-amber-600 mr-2 flex-shrink-0">
              <User size={16} />
            </div>
            <span>{furnitureTypes.length > 1 ? "8. " : "6. "}Контактные данные</span>
          </label>
          <div class="space-y-3 ml-10">
            <div class="relative">
              <input 
                type="text" 
                name="name"
                placeholder={contactFields.name}
                required
                class="w-full border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm bg-white" 
              />
            </div>
            <div class="relative">
              <input 
                type="tel" 
                name="phone"
                placeholder={contactFields.phone}
                required
                class="w-full border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm bg-white" 
              />
            </div>
            {contactFields.email && (
              <div>
                <div class="relative">
                  <input 
                    type="text" 
                    name="email"
                    placeholder={contactFields.email}
                    class="w-full border-2 border-stone-200 rounded-lg px-4 py-2.5 text-stone-700 focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-100 transition-all text-sm bg-white" 
                  />
                </div>
                {contactFields.emailLabel && (
                  <p class="mt-1.5 text-xs text-stone-500">{contactFields.emailLabel}</p>
                )}
              </div>
            )}
          </div>
        </div>

        {/* Submit Button */}
        <div class="pt-2">
          {additionalText && (
            <p class="text-center text-stone-600 mb-4 text-sm">
              {additionalText}
            </p>
          )}
          <button 
            type="submit" 
            class="w-full px-6 py-3.5 bg-stone-800 hover:bg-stone-700 text-white font-semibold rounded-lg transition-all duration-200 shadow-md hover:shadow-lg text-base"
          >
            {buttonText}
          </button>
        </div>

      </form>
    </div>
  </div>
</Section>

<style>
  /* Кастомные стили для select */
  select::-ms-expand {
    display: none;
  }
  
  /* Стили для кастомных input */
  input[type="number"]::-webkit-inner-spin-button,
  input[type="number"]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
  
  input[type="number"] {
    -moz-appearance: textfield;
  }
</style>

<script>
  // Обработка формы
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('#calculator form');
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        // Здесь можно добавить логику отправки формы
        console.log('Form submitted');
      });
    }
  });
</script>
