---
export interface Props {
    class?: string;
    padding?: 'sm' | 'md' | 'lg';
    background?: 'white' | 'light' | 'accent';
    border?: boolean;
}

const {
    class: className = '',
    padding = 'md',
    background = 'white',
    border = false
} = Astro.props;

const backgrounds = {
    white: 'bg-white',
    light: 'bg-stone-50',
    accent: 'bg-gradient-to-br from-rose-50 to-pink-50'
};

const paddings = {
    sm: 'p-4',
    md: 'p-6',
    lg: 'p-8'
};

const borderClass = border ? 'border border-stone-200' : '';

const classes = `rounded-2xl ${backgrounds[background]} ${paddings[padding]} ${borderClass} ${className}`;
---

<div class={classes}>
    <slot />
</div>
