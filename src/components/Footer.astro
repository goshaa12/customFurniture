---
import {
    Phone,
    Mail,
    MapPin,
    Clock,
    Send,
} from "@lucide/astro";
import Section from "./ui/Section.astro";
---

<footer class="bg-stone-800 text-stone-100">
    <Section background="default" padding="lg" class="bg-stone-800">
        <div class="grid lg:grid-cols-4 gap-8 mb-12">
            <!-- Company Info -->
            <div class="lg:col-span-2 space-y-6">
                <div class="flex items-center space-x-3">
                    <div
                        class="w-12 h-12 bg-gradient-to-br from-amber-400 to-amber-500 rounded-xl flex items-center justify-center"
                    >
                        <MapPin class="w-7 h-7 text-white" />
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-white">
                            Мебель на заказ
                        </h3>
                        <p class="text-stone-400">г. Алматы</p>
                    </div>
                </div>

                <div class="space-y-3">
                    <div class="flex items-center space-x-3">
                        <Phone class="w-5 h-5 text-amber-400 flex-shrink-0" />
                        <a
                            href="tel:+77771234567"
                            class="text-stone-300 hover:text-white transition-colors duration-200"
                        >
                            +7 (777) 123-45-67
                        </a>
                    </div>

                    <div class="flex items-center space-x-3">
                        <Mail class="w-5 h-5 text-amber-400 flex-shrink-0" />
                        <a
                            href="mailto:info@customfurniture.kz"
                            class="text-stone-300 hover:text-white transition-colors duration-200"
                        >
                            info@customfurniture.kz
                        </a>
                    </div>

                    <div class="flex items-center space-x-3">
                        <MapPin class="w-5 h-5 text-amber-400 flex-shrink-0" />
                        <span class="text-stone-300">
                            г. Алматы, ул. Тимирязева, 45
                        </span>
                    </div>

                    <div class="flex items-center space-x-3">
                        <Clock class="w-5 h-5 text-amber-400 flex-shrink-0" />
                        <span class="text-stone-300">
                            Пн-Пт: 9:00-18:00, Сб: 10:00-15:00, Вс: выходной
                        </span>
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="space-y-6">
                <h4 class="text-lg font-semibold text-white">Быстрые ссылки</h4>
                <nav class="space-y-3">
                    <a
                        href="#services"
                        class="block text-stone-300 hover:text-amber-400 transition-colors duration-200"
                    >
                        Услуги
                    </a>
                    <a
                        href="#about"
                        class="block text-stone-300 hover:text-amber-400 transition-colors duration-200"
                    >
                        О компании
                    </a>
                    <a
                        href="#portfolio"
                        class="block text-stone-300 hover:text-amber-400 transition-colors duration-200"
                    >
                        Портфолио
                    </a>
                    <a
                        href="#reviews"
                        class="block text-stone-300 hover:text-amber-400 transition-colors duration-200"
                    >
                        Отзывы
                    </a>
                    <a
                        href="#contact"
                        class="block text-stone-300 hover:text-amber-400 transition-colors duration-200"
                    >
                        Контакты
                    </a>
                </nav>
            </div>

            <!-- Services -->
            <div class="space-y-6">
                <h4 class="text-lg font-semibold text-white">Услуги</h4>
                <div class="space-y-3">
                    <span class="block text-stone-300">Изготовление кухонь</span>
                    <span class="block text-stone-300">Шкафы-купе</span>
                    <span class="block text-stone-300">Гардеробные</span>
                    <span class="block text-stone-300">Детская мебель</span>
                    <span class="block text-stone-300">Офисная мебель</span>
                    <span class="block text-stone-300">Ремонт и реставрация</span>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="border-t border-stone-700 pt-8 mb-8">
            <div id="contacts" class="space-y-4 max-w-md">
                <h4 class="text-lg font-semibold text-white">
                    Закажите мебель
                </h4>
                <p class="text-stone-300 text-sm">
                    Оставьте заявку и наши специалисты свяжутся с вами
                </p>
                <form class="space-y-4">
                    <div class="grid sm:grid-cols-2 gap-4">
                        <input
                            type="text"
                            name="name"
                            placeholder="Ваше имя"
                            class="w-full px-4 py-3 bg-stone-700 border border-stone-600 rounded-xl text-white placeholder-stone-400 focus:outline-none focus:border-amber-400 focus:ring-2 focus:ring-rose-400/20"
                            required
                        />
                        <input
                            type="tel"
                            name="phone"
                            placeholder="Телефон"
                            class="w-full px-4 py-3 bg-stone-700 border border-stone-600 rounded-xl text-white placeholder-stone-400 focus:outline-none focus:border-amber-400 focus:ring-2 focus:ring-rose-400/20"
                            required
                        />
                    </div>
                    <button
                        type="submit"
                        class="w-full px-6 py-3 bg-gradient-to-r from-amber-500 to-amber-600 text-white font-medium rounded-xl hover:from-amber-600 hover:to-amber-700 transition-all duration-200 focus:outline-none focus:ring-4 focus:ring-rose-400/30"
                    >
                        <Send class="w-4 h-4 inline mr-2" />
                        Заказать мебель
                    </button>
                </form>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="border-t border-stone-700 pt-8">
            <div
                class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
            >
                <p class="text-stone-400 text-sm">
                    © 2025 Мебель на заказ. Все права защищены.
                </p>
                <div class="flex space-x-6 text-sm">
                    <a
                        href="#"
                        class="text-stone-400 hover:text-white transition-colors duration-200"
                    >
                        Политика конфиденциальности
                    </a>
                    <a
                        href="#"
                        class="text-stone-400 hover:text-white transition-colors duration-200"
                    >
                        Условия использования
                    </a>
                </div>
            </div>
        </div>
    </Section>
</footer>

<script>
    // Contact form submission
    const contactForm = document.querySelector("#contacts form");
    if (contactForm) {
        contactForm.addEventListener("submit", function (e: Event) {
            e.preventDefault();

            const form = e.target as HTMLFormElement;

            // Get form data
            const formData = new FormData(form);
            const nameInput = form.querySelector(
                'input[type="text"]',
            ) as HTMLInputElement;
            const phoneInput = form.querySelector(
                'input[type="tel"]',
            ) as HTMLInputElement;

            const name = formData.get("name") || nameInput?.value;
            const phone = formData.get("phone") || phoneInput?.value;

            // Here you would typically send the data to your backend
            console.log("Form submitted:", { name, phone });

            // Show success message
            alert(
                "Спасибо! Ваша заявка отправлена. Мы свяжемся с вами в ближайшее время.",
            );

            // Reset form
            form.reset();
        });
    }
</script>
