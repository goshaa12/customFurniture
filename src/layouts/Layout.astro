---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "1️⃣ Изготовление мебели на заказ в Алматы — готово за 7 дней",
  description = "Изготовление мебели на заказ в Алматы  ⭐ Шкафы, кухни, кровати под ваши размеры ⭐ Гарантия качества 3 года ⭐ Сделайте интерьер уютным и удобным уже сегодня!",
} = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <meta property="og:image" content="/og-image.png" />
    <meta name="twitter:image" content="/og-image.png" />
    <meta property="vk:image" content="/og-image.png" />
  </head>
  <body class="min-h-screen bg-stone-50 text-stone-800">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
