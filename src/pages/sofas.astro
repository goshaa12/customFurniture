---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/sections/Hero.astro";
import Services from "../components/sections/Services.astro";
import WhyUs from "../components/sections/WhyUs.astro";
import HowItWorks from "../components/sections/HowItWorks.astro";
import CalculatorSofas from "../components/sections/CalculatorSofas.astro";
import Promotions from "../components/sections/Promotions.astro";
import Reviews from "../components/sections/Reviews.astro";
import FAQ from "../components/sections/FAQ.astro";
import WhatImportant from "../components/sections/WhatImportant.astro";
import Companys from "../components/sections/Companys.astro";
import AboutUs from "../components/sections/AboutUs.astro";
import ReUsableTable from "../components/sections/ReUsableTable.astro";
import CustomFurniture from "../components/sections/CustomFurniture.astro";
import ContactForm from "../components/sections/ContactForm.astro";
import FeaturesCards from "../components/sections/FeaturesCards.astro";
import TypeOfKitchen from "../components/sections/TypeOfKitchen.astro";

import { heroData, servicesData, whyUsData, howItWorksData, promotionsData, reUsableTableData, reUsableTableData2, reUsableTableData3, reUsableTableData4, customFurnitureData, whatImportantData, companysData, aboutUsData, reviewsData, calculatorData, contactFormData, featuresCardsData, typeOfKitchenData, servicesData2 } from "../data/sofas";

const faqs = [
  {
    question: "Диван на заказ реально впишется в маленькую комнату?",
    answer:
      "Да, подбираются точные размеры и глубина, чтобы мебель была удобной и функциональной даже в узком пространстве.",
  },
  {
    question: "Можно изменить ткань понравившейся модели?",
    answer:
      "Да, выбирайте из ассортимента или предлагайте свой материал, и диван на заказ будет полностью соответствовать вашим пожеланиям.",
  },
  {
    question: "Не получится ли диван другой, чем на проекте?",
    answer:
      "Проекты и 3D-макеты согласовываются заранее, проверяются все детали, чтобы диван на заказ соответствовал ожиданиям.",
  },
  {
    question: "Можно добавить ящик или встроенные USB-порты?",
    answer:
      "Да, изменения просчитываются, конструкция остаётся прочной, а диван на заказ функциональным.",
  },
  {
    question: "Можно сделать диван по фото или эскизу?",
    answer:
      "Да, присылайте изображение, мы адаптируем форму и материалы. Диван на заказ будет максимально близким к вашему образцу.",
  },
  {
    question: "Сколько занимает изготовление необычной модели?",
    answer:
      "Обычно 2–5 недель, в зависимости от сложности. Даже нестандартные диваны на заказ производятся без задержек.",
  },
  {
    question: "Подойдёт ли диван для детей или животных?",
    answer:
      "Да, ткани и наполнители проверены на износ и безопасны. Механизмы рассчитаны на ежедневное использование.",
  },
  {
    question: "Нужно ли присутствовать на замере?",
    answer:
      "Не обязательно, мастер может приехать к вам, часть консультаций возможна онлайн. Диван на заказ будет точным по размерам.",
  },
  {
    question: "Гарантия покрывает все проблемы?",
    answer:
      "Да, каркас, механизм и обивка защищены по договору, любые неполадки устраняются быстро и без вопросов.",
  },
  {
    question: "Цена может вырасти в процессе?",
    answer:
      "Нет, все материалы и размеры фиксируются в договоре, дополнительные изменения согласуются отдельно.",
  },
];
---

<Layout
  title="1️⃣ Диваны на заказ в Алматы – точная подгонка и комфорт"
  description="Диваны на заказ в Алматы ⭐ Прочные каркасы, качественные ткани, доступные цены и гарантия 3 года ⭐ Закажите диван прямо сейчас!"
>
  <main>
    <Hero {...heroData} />
    <WhyUs {...whyUsData}/>
    <ReUsableTable {...reUsableTableData}/>
    <ReUsableTable {...reUsableTableData2}/>
    <ReUsableTable {...reUsableTableData3}/>
    <FeaturesCards {...featuresCardsData} gridCols={2}/>
    <CalculatorSofas {...calculatorData}/>
    <HowItWorks {...howItWorksData}/>
    <WhatImportant {...whatImportantData}/>
    <ContactForm {...contactFormData}/>
    <Services {...servicesData} items={[]}/>
    <Companys {...companysData}/>
    <Reviews {...reviewsData}/>
    <Services {...servicesData2}/>
    <FAQ faqs={faqs} title="Часто задаваемые вопросы" />
  </main>
</Layout>
