---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/sections/Hero.astro";
import Services from "../components/sections/Services.astro";
import WhyUs from "../components/sections/WhyUs.astro";
import HowItWorks from "../components/sections/HowItWorks.astro";
import CalculatorSofas from "../components/sections/CalculatorSofas.astro";
import CalculatorCornerKitchens from "../components/sections/CalculatorCornerKitchens.astro";
import CalculatorCommode from "../components/sections/CalculatorCommode.astro";
import CalculatorBedroomBeds from "../components/sections/bedroomBeds/Calculator.astro";
import Promotions from "../components/sections/Promotions.astro";
import Reviews from "../components/sections/Reviews.astro";
import FAQ from "../components/sections/FAQ.astro";
import WhatImportant from "../components/sections/WhatImportant.astro";
import Companys from "../components/sections/Companys.astro";
import AboutUs from "../components/sections/AboutUs.astro";
import ReUsableTable from "../components/sections/ReUsableTable.astro";
import CustomFurniture from "../components/sections/CustomFurniture.astro";
import ContactForm from "../components/sections/ContactForm.astro";
import FeaturesCards from "../components/sections/FeaturesCards.astro";
import TypeOfKitchen from "../components/sections/TypeOfKitchen.astro";
import PaymentMethods from "../components/sections/PaymentMethods.astro";

import { heroData, servicesData, whyUsData, howItWorksData, promotionsData, reUsableTableData, reUsableTableData2, reUsableTableData3, reUsableTableData4, customFurnitureData, whatImportantData, companysData, aboutUsData, reviewsData, calculatorData, contactFormData, featuresCardsData, typeOfKitchenData, servicesData2, paymentMethodsData } from "../data/bedroomBeds";

const faqs = [
  {
    question: "А вдруг кровать на заказ получится дороже, чем в магазине?",
    answer:
      "Цена зависит от материалов, а не от бренда. Вы платите только за нужные функции, качество и точное соответствие вашему интерьеру.",
  },
  {
    question: "Можно ли заказать кровать, если не знаю, какой дизайн выбрать?",
    answer:
      "Дизайнер подберёт цвет и материалы, покажет визуализацию. Даже без точного понимания вы получите идеально подходящее решение.",
  },
  {
    question: "Что если кровать не подойдёт по размеру или стилю?",
    answer:
      "Перед запуском выполняется точный замер и 3D-проект. После вашего утверждения изменений не будет — кровать идеально впишется в комнату.",
  },
  {
    question: "Как долго изготавливается кровать по индивидуальному заказу?",
    answer:
      "Обычно от 10 до 20 рабочих дней. Все сроки фиксируются в договоре, поэтому вы заранее знаете дату готовности и установки.",
  },
  {
    question: "Делаете ли вы кровати с нестандартными функциями?",
    answer:
      "Реализуем любые идеи — от встроенных ящиков до мягких изголовий. Всё обсуждается на этапе проектирования, чтобы результат был точным.",
  },
  {
    question: "Что если спальня маленькая и стандартная кровать не помещается?",
    answer:
      "Для этого и создаются кровати на заказ. Рассчитаем размеры с точностью до сантиметра, чтобы сохранить максимум пространства и удобства.",
  },
  {
    question: "Можно ли использовать собственные материалы или ткани?",
    answer:
      "Да, если они подходят по характеристикам. Специалисты проверят качество и помогут реализовать вашу идею безопасно и надёжно.",
  },
  {
    question: "Предоставляете ли гарантию на кровати на заказ?",
    answer:
      "Да, гарантия от 12 месяцев и выше. В случае мелких доработок или регулировки — приедем и решим всё быстро и без лишней бюрократии.",
  },
  {
    question: "Как проходит доставка и сборка?",
    answer:
      "Кровать доставляется в надёжной упаковке, поднимается и собирается на месте. После установки — чисто и без мусора, обычно за один день.",
  },
  {
    question: "Можно ли заказать кровать, если нахожусь не в Алматы?",
    answer:
      "Да, возможна доставка по всему Казахстану. Обсуждаем маршруты, сроки и детали заранее, чтобы всё прошло удобно и без задержек.",
  },
];
---

<Layout
  title="1️⃣ Кровати на заказ в Алматы — за 7 дней и с гарантией"
  description="Кровати на заказ в Алматы ⭐ Изготовим по размерам за 7 дней! Гарантия качества и стильный дизайн ⭐ Закажите кровать прямо сейчас"
>
<main>
  <Hero {...heroData} />
  <WhyUs {...whyUsData} />
  <ReUsableTable {...reUsableTableData} />
  <ReUsableTable {...reUsableTableData2} />
  <ReUsableTable {...reUsableTableData3} />
  <FeaturesCards {...featuresCardsData} gridCols={2}/>
  <CalculatorBedroomBeds {...calculatorData} />
  <HowItWorks {...howItWorksData} />
  <ContactForm {...contactFormData} />
  <CustomFurniture {...customFurnitureData} />
  <ReUsableTable {...reUsableTableData4} />
  <Services {...servicesData} items={[]} />
  <Companys {...companysData} />
  <Reviews {...reviewsData} />
  <FAQ faqs={faqs} title="Часто задаваемые вопросы" />
</main>
</Layout>
