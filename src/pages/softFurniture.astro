---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/sections/Hero.astro";
import Services from "../components/sections/Services.astro";
import WhyUs from "../components/sections/WhyUs.astro";
import HowItWorks from "../components/sections/HowItWorks.astro";
import CalculatorSofas from "../components/sections/CalculatorSofas.astro";
import Promotions from "../components/sections/Promotions.astro";
import Reviews from "../components/sections/Reviews.astro";
import FAQ from "../components/sections/FAQ.astro";
import WhatImportant from "../components/sections/WhatImportant.astro";
import Companys from "../components/sections/Companys.astro";
import AboutUs from "../components/sections/AboutUs.astro";
import ReUsableTable from "../components/sections/ReUsableTable.astro";
import CustomFurniture from "../components/sections/CustomFurniture.astro";
import ContactForm from "../components/sections/ContactForm.astro";
import FeaturesCards from "../components/sections/FeaturesCards.astro";
import TypeOfKitchen from "../components/sections/TypeOfKitchen.astro";

import { heroData, servicesData, whyUsData, howItWorksData, promotionsData, reUsableTableData, reUsableTableData2, reUsableTableData3, reUsableTableData4, customFurnitureData, whatImportantData, companysData, aboutUsData, reviewsData, calculatorData, contactFormData, featuresCardsData, typeOfKitchenData, servicesData2 } from "../data/softFurniture";

const faqs = [
  {
    question: "Что, если я не знаю, какой стиль выбрать?",
    answer:
      "Мы подскажем варианты, покажем примеры и соберём визуализацию. Главное — чтобы мебель отражала ваш вкус и привычки.",
  },
  {
    question: "Бывает, что результат не совпадает с ожиданиями?",
    answer:
      "Нет. Перед запуском вы видите проект, ткани и фото материалов, поэтому всё согласуется заранее.",
  },
  {
    question: "Можно ли сделать мебель, если мало места?",
    answer:
      "Да, мы проектируем под любые планировки — от студий до нестандартных углов. Всё продумывается до миллиметра.",
  },
  {
    question: "Что, если сломается через пару лет?",
    answer:
      "Используем прочные материалы и даём гарантию. Такая мебель не скрипит и не провисает даже при активном использовании.",
  },
  {
    question: "Сколько времени занимает изготовление?",
    answer:
      "Обычно от двух до трёх недель, в зависимости от сложности проекта. Сроки фиксируются в договоре.",
  },
  {
    question: "Делаете ли мебель по фото из Pinterest?",
    answer:
      "Да, можем повторить идею, но адаптируем под ваши размеры и интерьер. Получается то же настроение, но уникально под вас.",
  },
  {
    question: "Можно ли внести изменения после утверждения проекта?",
    answer:
      "Да, до начала сборки — без проблем. Мы гибко подстраиваемся, если вы решили поменять цвет или ткань.",
  },
  {
    question: "Работаете ли вы за пределами Алматы?",
    answer:
      "Да, доставляем и устанавливаем мебель по всему Казахстану. Всё делаем под ключ, как на месте.",
  },
  {
    question: "А вдруг мебель не подойдёт по цвету?",
    answer:
      "Перед началом работ показываем реальные образцы тканей и делаем визуализацию, чтобы вы точно видели результат.",
  },
  {
    question: "Можно ли заказать замену обивки на старой мебели?",
    answer:
      "Да, делаем перетяжку и частичное восстановление — старый каркас, новая жизнь.",
  },
];
---

<Layout
  title="1️⃣ Мягкая мебель на заказ в Алматы – комфорт и стиль"
  description="Мягкая мебель на заказ в Алматы ⭐ Качественные ткани, надёжные каркасы, доступные цены, гарантия 3 года ⭐ Оставьте заявку прямо сейчас!"
>
<main>
  <Hero {...heroData} />
  <WhyUs {...whyUsData} 
  image1="/images/home/why-us-soft-furniture-1.webp"
  image1Alt="Описание первой картинки"
  image2="/images/home/why-us-soft-furniture-2.webp"
  image2Alt="Описание второй картинки"
  />
  <ReUsableTable {...reUsableTableData}/>
  <ReUsableTable {...reUsableTableData2}/>
  <FeaturesCards {...featuresCardsData}/>
  <HowItWorks {...howItWorksData}/>
  <WhatImportant {...whatImportantData}/>
  <ContactForm {...contactFormData}/>
  <Services {...servicesData} items={[]}/>
  <Companys {...companysData}/>
  <Reviews {...reviewsData}/>
  <Services {...servicesData2}/>
  <FAQ faqs={faqs} title="Часто задаваемые вопросы" />
</main>
</Layout>
